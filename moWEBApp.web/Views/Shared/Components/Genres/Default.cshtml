@model List<Genre>

<div class="dropdown me-2">
    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Categories
    </button>
    <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/Movies/List">All</a></li>
        @foreach (var genre in Model)
        {
            <li><a class="dropdown-item @(ViewBag.SelectedGenre==genre.GenreId.ToString()?"active":"")" href="/Movies/List/@genre.GenreId">@genre.Name</a></li>
        }
    </ul>
</div>